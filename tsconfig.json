{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks":false,
        "removeComments": false,
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react",
        "module": "es6",
        "typeRoots": [
            "./types",
            "./node_modules/@types",
            "./typings.d.ts"
        ],
        "declaration": false,
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./",
        "./src/"
    ]
}
